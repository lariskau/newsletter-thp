<h1>Bienvenue à Newsletter the hacking project</h1>
<p>Pour avoir accés à tout les articles remplis le formulaire</p>



<div class="centrage">
<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Coût : 5.00€</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Paiement de la Newletter"
          data-amount="500"
          data-currency="eur"
          data-locale="auto"></script>
<% end %>
</div>
